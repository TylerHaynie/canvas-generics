{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@canvas/*": ["app/lib/canvas/*"],
      "@canvas/events/*": ["app/lib/canvas/events/*"],
      "@canvas/managers/*": ["app/lib/canvas/managers/*"],
      "@canvas/models/*": ["app/lib/canvas/models/*"],
      "@canvas/objects/*": ["app/lib/canvas/objects/*"],
      "@canvas/shapes/*": ["app/lib/canvas/shapes/*"],
      "@canvas/ui/*": ["app/lib/canvas/user-interface/*"],
      "@canvas/utilities/*": ["app/lib/canvas/utilities/*"],
    }
  }
}
