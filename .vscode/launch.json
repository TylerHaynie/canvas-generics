{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build and Serve",
      "type": "chrome",
      "runtimeArgs": [
        "--disable-web-security",
        "--user-data-dir=c:/dev/ChromeDevSession",
        "--disable-extensions",
        "--remote-debugging-port=9222"
      ],
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}"
    }
  ]
}