{
  "compileOnSave": true,
  "include": [
    "../library"
  ],
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@quadtree/*": ["../library/quadtree/*"],
      "@canvas/*": ["../library/canvas/*"],
      "@canvas/events/*": ["../library/canvas/events/*"],
      "@canvas/managers/*": ["../library/canvas/managers/*"],
      "@canvas/models/*": ["../library/canvas/models/*"],
      "@canvas/objects/*": ["../library/canvas/objects/*"],
      "@canvas/shapes/*": ["../library/canvas/shapes/*"],
      "@canvas/utilities/*": ["../library/canvas/utilities/*"],
      "@canvas/elements/*": ["../library/canvas/elements/*"],
    }
  }
}
